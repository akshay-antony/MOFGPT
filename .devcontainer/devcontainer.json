{
    "name": "mofgpt",
    "image": "nvcr.io/nvidia/pytorch:22.02-py3",
    "workspaceFolder": "/MOFGPT",
    "workspaceMount": "source=${localWorkspaceFolder},target=/MOFGPT,type=bind,consistency=cached",
    "runArgs": [
        "--env", "DISPLAY:${localEnv:DISPLAY}",
        "--volume", "/tmp/.X11-unix:/tmp/.X11-unix:rw",
        "--privileged",
        "--ipc=host",
        "--gpus", "all",
        "--shm-size", "16G",
        "--name", "mofgpt",
        "--rm"
    ],
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-toolsai.jupyter",
                "github.copilot",
                "ms-vscode.gitlens",
                "vscode.git"
            ]
        }
    },
    "remoteUser": "root",
    "postCreateCommand": "pip install -r ./.devcontainer/requirements.txt && chmod -R 777 /MOFGPT && cd /MOFGPT"
}